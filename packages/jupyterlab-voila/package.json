{
  "name": "@jupyter-voila/jupyterlab-preview",
  "version": "1.1.0",
  "description": "A JupyterLab preview extension for Voilà",
  "keywords": [
    "jupyter",
    "jupyterlab",
    "jupyterlab-extension"
  ],
  "homepage": "https://github.com/voila-dashboards/voila",
  "bugs": {
    "url": "https://github.com/voila-dashboards/voila/issues"
  },
  "license": "BSD-3-Clause",
  "author": "Voilà contributors",
  "files": [
    "lib/**/*.{d.ts,eot,gif,html,jpg,js,js.map,json,png,svg,woff2,ttf}",
    "style/**/*.{css,eot,gif,html,jpg,json,png,svg,woff2,ttf}",
    "schema/*.json"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/voila-dashboards/voila.git"
  },
  "scripts": {
    "build": "tsc",
    "prettier": "prettier --write '**/*{.ts,.tsx,.js,.jsx,.css,.json,.md}'",
    "clean": "rimraf lib && rimraf tsconfig.tsbuildinfo",
    "watch": "tsc -w",
    "prepare": "npm run clean && npm run build"
  },
  "dependencies": {
    "@jupyterlab/application": "^3.0.0-rc.1",
    "@jupyterlab/apputils": "^3.0.0-rc.1",
    "@jupyterlab/docregistry": "^3.0.0-rc.1",
    "@jupyterlab/fileeditor": "^3.0.0-rc.1",
    "@jupyterlab/mainmenu": "^3.0.0-rc.1",
    "@jupyterlab/notebook": "^3.0.0-rc.1",
    "react": "~16.13.1",
    "react-dom": "~16.13.1"
  },
  "devDependencies": {
    "@types/react": "~16.9.48",
    "@types/react-dom": "~16.9.8",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.19.0",
    "rimraf": "^2.6.1",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "~4.0.3"
  },
  "lint-staged": {
    "**/*{.ts,.tsx,.css,.json,.md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jupyterlab": {
    "extension": true,
    "schemaDir": "schema",
    "discovery": {
      "server": {
        "managers": [
          "conda",
          "pip"
        ],
        "base": {
          "name": "voila"
        }
      }
    }
  }
}
